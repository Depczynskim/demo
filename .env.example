# POPS Analytics Environment Variables
# Copy this file to .env and fill in the values

# Google Ads API credentials
GOOGLE_ADS_CLIENT_ID=your-client-id
GOOGLE_ADS_CLIENT_SECRET=your-client-secret
GOOGLE_ADS_REFRESH_TOKEN=your-refresh-token
GOOGLE_ADS_DEVELOPER_TOKEN=your-developer-token
GOOGLE_ADS_LOGIN_CUSTOMER_ID=your-manager-id
GOOGLE_ADS_CUSTOMER_ID=your-customer-id

# Google Analytics 4 (GA4) credentials
GA4_PROPERTY_ID=your-property-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Search Console credentials
SEARCH_CONSOLE_SITE_URL=sc-domain:your-domain.com

# OpenAI API configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_COMPLETION_MODEL=gpt-4-turbo-preview

# Vector database configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION=pops_memories

# Logging configuration
LOG_LEVEL=info  # debug, info, warning, error, critical

# Feature flags (true/false)
FEATURE_FLAG_MEMORY_ENHANCED_VECTOR_STORE=false
FEATURE_FLAG_MEMORY_THREAD_SAFE_OPERATIONS=false
FEATURE_FLAG_MEMORY_HYBRID_SEARCH=false
FEATURE_FLAG_MEMORY_CONCURRENT_SEARCH=false
FEATURE_FLAG_EXTRACTORS_BASE_EXTRACTOR=false
FEATURE_FLAG_EXTRACTORS_ENHANCED_GA4=false
FEATURE_FLAG_EXTRACTORS_ENHANCED_ADS=false
FEATURE_FLAG_EXTRACTORS_ENHANCED_SEARCH_CONSOLE=false
FEATURE_FLAG_AGENT_MODULAR_ARCHITECTURE=false
FEATURE_FLAG_AGENT_ENHANCED_ERROR_HANDLING=false
FEATURE_FLAG_AGENT_SQL_IMPROVEMENTS=false
FEATURE_FLAG_AGENT_ASYNC_OPERATIONS=false
FEATURE_FLAG_DASHBOARD_ENHANCED_UI=false
FEATURE_FLAG_DASHBOARD_OPTIMIZED_DATA_LOADING=false
FEATURE_FLAG_DASHBOARD_ASYNC_COMMUNICATION=false
FEATURE_FLAG_INFRA_ENVIRONMENT_VARIABLES=false
FEATURE_FLAG_INFRA_STANDARDIZED_LOGGING=false
FEATURE_FLAG_INFRA_TESTING_FRAMEWORK=true